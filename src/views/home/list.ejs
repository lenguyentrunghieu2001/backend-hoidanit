<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: coral;
    }
</style>
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/add-user">Create a user</a>
    </div>

    <h2>Danh sách người dùng</h2>

    <table>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Name</th>
            <th>City</th>
            <th>Chức năng</th>
        </tr>
        <% listUser.forEach(function(user,index){ %>
            <tr>
                <td>
                    <%= index+1 %>
                </td>
                <td>
                    <%=user.email %>
                </td>
                <td>
                    <%=user.name %>
                </td>
                <td>
                    <%=user.city %>
                </td>
                <td>
                    <button onclick="window.location.href='/update-user/<%=user.id%>'">Sửa</button>
                    <button>Xóa</button>
                </td>
            </tr>
            <% }); %>

    </table>
</body>

</html>