    <!-- form create a user -->
    <div class="container">
        <h2>Form edit a user</h2>
        <form action="/update-db-user" method="post">
            <input type="hidden" name="id" value="<%=user.id%>">
            <label for="fname">Email</label>
            <input type="text" value="<%=user.email%>" name="email" id="fname" placeholder="Your email.." />
            <label for="lname">Name</label>
            <input type="text" value="<%=user.name%>" name="name" id="lname" placeholder="Your name.." />
            <label for="lname">Your City</label>
            <input type="text" value="<%=user.city%>" name="city" id="lname" placeholder="Your city.." />
            <div class="submit">
                <input type="submit" value="update" />
            </div>
        </form>
    </div>
</body>

